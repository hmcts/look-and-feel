{#
  toggleHelp
    link          - (required) the question
    text          - (required) the answer that is toggled
    openByDefault - (default = false) show the answer at load time

  Displays a togglable answer to a question
#}

{% macro toggleHelp(link, text, openByDefault = false) %}

    <details role="group">
        <summary role="button" aria-controls="details-content" aria-expanded="{{ openByDefault.toString() }}">
            <span class="summary">{{ link }}</span></summary>
        <div class="panel panel-border-narrow" id="details-content-0" aria-hidden="{{ not openByDefault.toString() }}">
            <p>
                {{ text }}
            </p>
        </div>
    </details>

{% endmacro %}
