{% macro answer(question, answer, url, id) %}
<div class="govuk-check-your-answers cya-questions-short">
    <dl id="cya-{{ safeId(id, question) }}">
      <dt class="cya-question">
        {{ question }}
      </dt>
      <dd class="cya-answer">
        {% if caller %}
          {{ caller() }}
        {% else %}
          {% if isArray(answer) %}
            <ul>
              {% for line in answer %}
                <li>{{ line }}</li>
              {% endfor %}
            </ul>
          {% else %}
            {{ answer }}
          {% endif%}
        {% endif %}
      </dd>
      <dd class="cya-change">
        <a href="{{ url }}">
          Change<span class="govuk-visually-hidden"> {{ question }}</span>
        </a>
      </dd>
    </dl>
</div>
{% endmacro %}
