{% macro answer(question, answer, url, id, content) %}
<tr class="govuk-table__row" id="cya-{{ safeId(id, question) }}">
  <td class="govuk-table__cell govuk-!-width-one-third" scope="row">{{ question }}</td>
  <td class="govuk-table__cell govuk-!-width-two-thirds">
    {% if caller %}
      {{ caller() }}
    {% else %}
      {% if isArray(answer) %}
        <ul class="govuk-list">
          {% for line in answer %}
            <li>{{ line | safe }}</li>
          {% endfor %}
        </ul>
      {% else %}
        {{ answer | safe }}
      {% endif%}
    {% endif %}
  </td>
  <td class="govuk-table__cell">
    <a class="govuk-link" href="{{ url }}">
      {{ content.change }}<span class="govuk-visually-hidden"> {{ question }}</span>
    </a>
  </td>
</tr>
{% endmacro %}
