{% macro answer(question, answer, url, id) %}
<tr class="govuk-table__row" id="cya-{{ safeId(id, question) }}">
  <th class="govuk-table__header cya-question" scope="row">{{ question }}</th>
  <td class="govuk-table__cell">
    {% if caller %}
      {{ caller() }}
    {% else %}
      {% if isArray(answer) %}
        <ul>
          {% for line in answer %}
            <li>{{ line }}</li>
          {% endfor %}
        </ul>
      {% else %}
        {{ answer }}
      {% endif%}
    {% endif %}
  </td>
  <td class="govuk-table__cell">
    <a href="{{ url }}">
      Change<span class="visually-hidden"> {{ question }}</span>
    </a>
  </td>
</tr>
{% endmacro %}
